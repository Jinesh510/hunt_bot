<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <jinesh.urbanhunt_test.HorizontalListView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/categoryList"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp">
    </jinesh.urbanhunt_test.HorizontalListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/collectionHeader"
        android:layout_below="@+id/categoryList"
        android:layout_centerHorizontal="true"
        android:text="Cool Collections"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textColor="#e74c3c"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/sepline"
        android:layout_below="@+id/collectionHeader"
        android:layout_marginBottom="5dp"
        android:background="#000000"></View>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/collectionsList"
        android:layout_below="@+id/sepline"
        android:nestedScrollingEnabled="true"></ListView>

</RelativeLayout>